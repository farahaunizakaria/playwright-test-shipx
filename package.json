{
  "name": "automated-test",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "dotenv": "^17.2.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "prettier": "^3.7.3"
  },
  "scripts": {
    "format": "prettier --write .",
    "codegen": "node -r dotenv/config -e \"require('child_process').spawn('npx', ['playwright', 'codegen', process.env.BASE_URL || 'http://localhost:3000'], {stdio: 'inherit'})\"",
    "codegen:url": "npx playwright codegen",
    "test": "playwright test",
    "test:install": "yarn playwright install && playwright test",
    "ui": "playwright test --ui",
    "headed": "playwright test --headed"
  }
}
